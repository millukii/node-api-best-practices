<section>
    <h1>{{ article.title }}</h1>
    <small>  - by {{ article.author.username }}</small>
    <div>
        {{ article.content }}
    </div>
</section>
<section>
    <h1>Comments</h1>
    {{#each comments as |comment| }}
       <div>
           <h2>{{comment.title}}</h2>
           <div>- by <small>{{comment.user.username}}</small></div>
           <p>{{comment.message}}</p>
       </div>
    {{/each}}
</section>