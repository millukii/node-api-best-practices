{{#each articles as |article| }}
    <section>
        <h1>{{ article.title }}</h1>
        <small>  - by {{ article.author.username }}</small>
        <div>
            {{ article.content }}
        </div>
        <div>
            <a href="/articles/{{article.id}}">read more...</a>
        </div>
    </section> 
{{/each}} 